{
  "moduleFileExtensions": [
    "js",
    "json",
    "ts"
  ],
  "rootDir": ".",
  "testEnvironment": "node",
  "testTimeout": 30000,
  "testRegex": ".e2e-spec.ts$",
  "transform": {
    "^.+\\.(t|j)s$": "ts-jest"
  },
  "moduleNameMapper": {
    "@libs/common/(.*)": "<rootDir>/../libs/common/src/$1",
    "@libs/common": "<rootDir>/../libs/common/src",
    "^src/(.*)$": "<rootDir>/../src/$1",
    "^libs/(.*)$": "<rootDir>/../libs/$1"
  }
}